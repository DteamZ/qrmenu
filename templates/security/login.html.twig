{% extends 'base.html.twig' %} {% block title %}Connexion!{% endblock %} {% block stylesheets %}
<link href="{{ asset('../../css/app.css') }}" rel="stylesheet" ype="text/css" /> {% endblock %} {% block body %}
<div class="titre">
    <h1>MenuQR</h1>
</div>
<div class="row justify-content-center">
    <form method="post" style="margin:20rem 0rem 50rem 40rem">
        {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %} {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
        {% endif %}
        <h1>Connexion</h1>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"> {# Uncomment this section and add a remember_me option below your firewall to activate remember me functionality. See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
        #}

        <div class="form-group" style="width: 600px">
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
        </div>

        <div class="form-group" style="width: 600px">
            <input type="password" name="password" id="inputPassword" class="form-control" required>
        </div>
        <button type="submit" class="btn btn-success">Success</button>

    </form>
</div>
{% endblock %}